<section id="features">
  <div class="container">
    <h2>Features</h2>
    <div class="feature-list">
      <div class="feature">
        <img src="/images/biometric-token.jpeg" alt="Biometric Token" />
        <h3>Biometric Token</h3>
        <p>Secure and convenient payments using your fingerprint.</p>
      </div>
      <div class="feature">
        <img src="/images/mobile-app.png" alt="Mobile App" />
        <h3>Mobile Application</h3>
        <p>Manage your balance, view transaction history, and more.</p>
      </div>
      <div class="feature">
        <img src="/images/payment-terminal.jpeg" alt="Payment Terminal" />
        <h3>Payment Terminal</h3>
        <p>Fast and reliable payment processing for drivers.</p>
      </div>
      <div class="feature">
        <img src="/images/activation-terminal.png" alt="Activation Terminal" />
        <h3>Activation Terminal</h3>
        <p>Easy activation of your biometric token.</p>
      </div>
    </div>
  </div>
</section>

<style>
  #features {
    padding: 60px 0;
  }

  .feature-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .feature {
    background: #2e2e2e;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    width: calc(25% - 40px);
  }

  .feature img {
    max-width: 100%;
    height: auto;
    margin-bottom: 10px;
  }

  .feature h3 {
    color: #d9d9d9;
    font-size: 1.5em;
  }
</style>
